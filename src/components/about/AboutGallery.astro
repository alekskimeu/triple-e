---
import Image from "astro/components/Image.astro";
import image from '../../assets/hero.jpeg'
---

<div class="images">
    <div class="left-images">
        <Image src={image} alt="" />
        <Image src={image} alt="" />
    </div>
    <div class="right-images">
        <Image src={image} alt="" />
        <Image src={image} alt="" />
    </div>
</div>

<style>
    .images {
        display: flex;
        gap: .4rem;
        width: fit-content;
        position: relative;
    }

    .images::after {
        position: absolute;
        content: "";
        height: 100%;
        width: 100%;
        background-color: #ecc6a7;
        z-index: -1;
        left: -3rem;
        top: 3rem;
        border-top-left-radius: .8rem;
        border-bottom-left-radius: .8rem;
        border-bottom-right-radius: .8rem;
    }

    img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }


    .images .left-images img:first-child {
        border-top-left-radius: .8rem;
        margin-bottom: .4rem;
    }

    .images .left-images img:last-child {
        border-bottom-left-radius: .8rem;
    }

    .images .right-images img:first-child {
        border-top-right-radius: .8rem;
        margin-bottom: .4rem;
    }

    .images .right-images img:last-child {
        border-bottom-right-radius: .8rem;
    }

    @media screen and (max-width: 1100px) {
        .images::after {
            display: none;
        }
    }
</style>